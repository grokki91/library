<%- include('./port/layout-start') %>

    <div class="container my-5" style="max-width: 500px;">
        <h2 class="text-center my-4"><%= title %></h2>
        <form class="col" method="POST" action="/signup">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
            </div>
            <button type="submit" class="btn bg-dark text-white my-3">Submit</button>
            <% if(text) { %>
              <div class="alert alert-secondary" role="alert"><%= text %></div>
            <% } %>
          </form>
    </div>

<%- include('./port/layout-end') %>