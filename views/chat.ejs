<%- include('./port/layout-start', {title: title}) %>
<%- include('./port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="InputName">Username</label>
            <input type="text" class="form-control user-name" id="InputName" aria-describedby="textHelp" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Comment:</label>
            <textarea class="form-control text-message" id="exampleFormControlTextarea1" rows="3"></textarea>
            <button type="submit" id="send" class="btn bg-dark text-white btn-message mt-2">Send</button>
        </div>
    </div>
    <div class="col-sm-6">
        <div id="list" class="list-group"></div>
    </div>
</div>

<%- include('./port/layout-end-chat') %>